<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.Chat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chat"
        android:label="ChatApp"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UploadImage">
        <activity
            android:name="com.example.Chat.ForgetActivity"
            android:theme="@style/MainTheme"
            android:exported="false" />
        <activity
            android:name="com.example.Chat.ProfileActivity"
            android:theme="@style/MainTheme"
            android:exported="false" />
        <activity
            android:name="com.example.Chat.MainActivity"
            android:theme="@style/MainTheme"
            android:exported="false" />
        <activity
            android:name="com.example.Chat.ChatActivity"
            android:exported="false" />
        <activity
            android:name="com.example.Chat.LoginActivity"
            android:theme="@style/MainTheme"
            android:exported="false" />
        <activity
            android:name="com.example.Chat.SingUpActivity"
            android:theme="@style/MainTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>